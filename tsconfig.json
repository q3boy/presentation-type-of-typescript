{
  "compilerOptions": {
    "module": "commonjs",
    "lib":["es2020"],
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "compileOnSave": false,
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "include": [
    "lib/**/*"
  ]
}
